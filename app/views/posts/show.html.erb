<div class="container">
	<h1><%= @post.title %></h1>
	<div>
		<%= @post.body %>
	</div>
	<br>
	<hr>

	<%= link_to "Edit Post", edit_post_path(@post) , :class => "btn btn-info" %>
	<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} ,:class => "btn btn-danger" %>
</div> 